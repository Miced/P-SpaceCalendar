function calendarEventHandler()
{
    libraries_load("google-api-php-client");   
    
    if(empty($_GET['action']))
        displayCalendarEvents();
    else if($_GET['action'] == 'delete')
    {
        deleteCalendarEvent($_GET['eid']);
        header('Location: calendar');
    }
}


